<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/widget_size_15"
        android:paddingEnd="@dimen/widget_size_15"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40">
            <TextView
                android:id="@+id/tv_time_title"
                android:textSize="@dimen/font_size_16"
                tools:text="01/1 周一"
                android:layout_centerVertical="true"
                android:textColor="@color/color_999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_day_exp"
                android:textSize="@dimen/font_size_16"
                tools:text="-21.5"
                android:textColor="@color/teal_700"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                tools:ignore="RelativeOverlap" />
            <TextView
                android:id="@+id/tv_day_in"
                android:textSize="@dimen/font_size_16"
                tools:text="+21.5"
                android:layout_toStartOf="@+id/tv_day_exp"
                android:textColor="@color/color_red"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/widget_size_30"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_50">
            <TextView
                android:id="@+id/tv_title"
                android:textColor="@color/color_333"
                android:textSize="@dimen/font_size_18"
                tools:text="买菜"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:text="-900"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/teal_700"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</layout>